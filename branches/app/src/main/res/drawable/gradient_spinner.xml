<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>
        <item>
            <shape>
                <gradient android:angle="90" android:startColor="@color/colorWhite" android:endColor="@color/colorWhite" android:type="linear" />

                <stroke android:width="2dp" android:color="@color/colorAccent" />

                <corners android:radius="5dp" />

                <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="6dp" />
            </shape>
     </item>

        <item>
            <bitmap android:gravity="center|right"
                android:src="@drawable/down_arrow" />
            // you can use any other image here, instead of default_holo_dark_am
        </item>

    </layer-list></item>

</selector>